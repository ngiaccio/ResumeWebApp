<%- include("../includes/header.ejs", {title: "Update " + resume.resume_name}); %>

<h1>Update <%= resume.resume_name%></h1>
<form action="/resume/update" method="get">
    <input type="hidden" id="resume_id" name="resume_id" value="<%= resume.resume_id %>">
    Resume Name:  <input id="resume_name" name="resume_name" type="text" value="<%= resume.resume_name%>" />
    <br />
    <br />


    Company(-ies):
    <br />
    <select id="company_id" name="company_id" multiple="multiple" value="<%= company.company_id %>">
        <% for(var i=0; company.length > i; i++ ) {
            var selected = "";
            //loop over resumes
            if(company[i].company_id != null) { //question here..get to automatically select stuff already selected
                selected = "selected";
            }
        %>
        <option value="<%= company[i].company_id %>" <%= selected %>><%= company[i].company_name %></option>
        <% } %>
    </select>

    <!-- Initialize the multiselect plugin: -->
    <script type="text/javascript">
        $(document).ready(function() {
            $('#company_id').multiselect();
        });
    </script>

    <br />
    <br />


    School(s):
    <br />
    <select id="school_id" name="school_id" multiple="multiple" value="<%= school.school_id %>">
        <% for(var i=0; school.length > i; i++ ) {
            var selected = "";
            if(school[i].school_id == resume.resume_id) { //question here..get to automatically select stuff already selected
                selected = "selected";
            }
        %>
        <option value="<%= school[i].school_id %>" <%= selected %>><%= school[i].school_name %></option>
        <% } %>
    </select>

    <!-- Initialize the multiselect plugin: -->
    <script type="text/javascript">
        $(document).ready(function() {
            $('#school_id').multiselect();
        });
    </script>

    <br />
    <br />

    Skill(s):
    <br />
    <select id="skill_id" name="skill_id" multiple="multiple" value="<%= skill.skill_id %>">
        <% for(var i=0; school.length > i; i++ ) {
            var selected = "";
            if(skill[i].skill_id == resume.resume_id) { //question here..get to automatically select stuff already selected
                selected = "selected";
            }
        %>
        <option value="<%= skill[i].skill_id %>" <%= selected %>><%= skill[i].skill_name %></option>
        <% } %>
    </select>

    <!-- Initialize the multiselect plugin: -->
    <script type="text/javascript">
        $(document).ready(function() {
            $('#skill_id').multiselect();
        });
    </script>

    <br />
    <br />

    <input type="submit" />

</form>

<%- include("../includes/footer.ejs"); %>